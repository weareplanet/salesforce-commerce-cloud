{
    "name": "{{npmName}}",
    "title": "{{infoName}}",
    "version": "{{npmVersion}}",
    "description": "TypeScript/JavaScript client for {{infoName}}",
    "homepage": "http://github.com/{{gitUserId}}/{{gitRepoId}}",
    "repository": {
        "type": "git",
        "url": "http://github.com/{{gitUserId}}/{{gitRepoId}}.git"
    },
    "bugs": {
        "url": "http://github.com/{{gitUserId}}/{{gitRepoId}}/issues"
    },
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "clean": "rm -Rfv ./node_modules/ ./src/**/*.js ./tests/*.d.ts ./tests/*.js",
        "build": "tsc --project ./tsconfig.json",
        "test": "rm -frv ./tests/*.d.ts && mocha --require ts-node/register --timeout 3000 tests/*.ts tests/*.js",
        "prepublishOnly": "npm run clean && npm i && npm run build"
    },
    "author": "customweb GmbH",
    "license": "{{{licenseInfo}}}",
    "keywords": ["{{{infoName}}}", "Payment", "Payment Integration"],
    "dependencies": {
        "bluebird": "^3.5.0",
        "crypto-js": "^3.1.8",
        "request": "^2.81.0",
        "@types/bluebird": "*",
        "@types/crypto-js": "*",
        "@types/request": "*"
    },
    "devDependencies": {
        "@types/chai": "^4.2.1",
        "@types/mocha": "^5.2.7",
        "chai": "^4.2.0",
        "form-data": "^2.5.1",
        "mocha": "^6.2.0",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.1"
    },
    "publishConfig":{
        "access": "public"{{#npmRepository}},
        "registry":"{{npmRepository}}"{{/npmRepository}}
    }
}
